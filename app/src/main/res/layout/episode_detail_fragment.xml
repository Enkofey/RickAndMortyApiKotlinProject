<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/infoEpisodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoEpisodeTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AirDate : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/infoEpisodeTextView"
        app:layout_constraintTop_toBottomOf="@+id/infoEpisodeTextView"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/infoEpisodeTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episode : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/infoEpisodeTextView2"
        app:layout_constraintTop_toBottomOf="@+id/infoEpisodeTextView2" />

    <TextView
        android:id="@+id/nameEpisodeDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/infoEpisodeTextView"
        app:layout_constraintTop_toTopOf="@+id/infoEpisodeTextView" />

    <TextView
        android:id="@+id/airDateEpisodeDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/infoEpisodeTextView2"
        app:layout_constraintTop_toTopOf="@+id/infoEpisodeTextView2" />

    <TextView
        android:id="@+id/episodeEpisodeDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/infoEpisodeTextView3"
        app:layout_constraintTop_toTopOf="@+id/infoEpisodeTextView3" />
</androidx.constraintlayout.widget.ConstraintLayout>